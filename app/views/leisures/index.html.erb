<p id="notice"><%= notice %></p>

<h1>Leisures</h1>

<table>
  <thead>
    <tr>
      <th>Person</th>
      <th>Leisure type</th>
      <th>Leisure name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @leisures.each do |leisure| %>
      <tr>
        <td><%= leisure.person %></td>
        <td><%= leisure.leisure_type %></td>
        <td><%= leisure.leisure_name %></td>
        <td><%= link_to 'Show', leisure %></td>
        <td><%= link_to 'Edit', edit_leisure_path(leisure) %></td>
        <td><%= link_to 'Destroy', leisure, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

