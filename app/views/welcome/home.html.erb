<style>
body{
  padding-top: 5rem;
}
  .verasity{
  
    padding-bottom: 1rem;
    margin-left: auto;
    margin-right:auto;
    font-size: 2.5em;
    vertical-align: middle;
    text-align: center;
  }
  .loader{
    margin-left: auto;
    margin-right: auto;
    vertical-align: middle;
    text-align: center;
    border:16px solid #f3f3f3;
    border-radius: 50%;
    border-top: 16px solid #3498db;
    width: 300px;
    height: 300px;
    animation: spin 2s linear infinite;
  }
  @keyframes spin {
    0% {transform: rotate(0deg); }
    100% {transform: rotate(360deg); }
  }

  .text-animation{
     margin-left: auto;
    margin-right:auto;
    font-family: sans-serif;
    font-size: 5em;
    color: blue;
    vertical-align: middle;
    text-align: center;
  }

  .text-animation li:last-child{
    margin-right: 0px;
  }

  .text-animation.hidden{
    opacity: 0px;
  }

